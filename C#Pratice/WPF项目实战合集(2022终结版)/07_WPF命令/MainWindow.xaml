<Window x:Class="_07_WPF命令.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_07_WPF命令"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox Height="20" Margin="5" Text="{Binding StrUserName}"/>
            <TextBox Height="20" Margin="5" Text="{Binding StrPassword}"/>
            <Button Height="20" Margin="5" Content="设置" Command="{Binding ShowMsgCommand}"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="_12_资源基础.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_12_资源基础"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    
    <Grid>
        <StackPanel>
            <Button Height="20" Content="改变其它按钮边框颜色" Margin="5" Click="Button_Click"/>
            <Button Height="20" Content="Button01" IsEnabled="true" Margin="5" BorderBrush="{StaticResource solidColoBrush}" BorderThickness="3"/>
            <Button Height="20" Content="Button02" IsEnabled="true" Margin="5" BorderBrush="{DynamicResource solidColoBrush}" BorderThickness="3"/>
        </StackPanel>


    </Grid>
</Window>

<Window x:Class="WpfApp_Project01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Project01"
        mc:Ignorable="d"
        Title="MyNotePad" Height="600" Width="800">
    <Grid ShowGridLines="true">
        <!--对整个大的界面进行分行操作-->
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="20"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <!--设置第一行-->
        <StackPanel Grid.Row="0" Orientation ="Horizontal">
            <Button Content="文件" Height="20" Width="70"/>
            <Button Content="编辑" Height="20" Width="70"/>
            <Button Content="查看" Height="20" Width="70"/>
            <Button Content="外观" Height="20" Width="70"/>
            <Button Content="设置" Height="20" Width="70"/>
            <Button Content="帮助" Height="20" Width="70"/>
        </StackPanel>
        
        <!--设置第二行-->
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="1" Height="20" Width="20"/>
            <Button Content="2" Height="20" Width="20"/>
            <Button Content="3" Height="20" Width="20"/>
            <Button Content="4" Height="20" Width="20"/>
            <Button Content="5" Height="20" Width="20"/>
            <Button Content="6" Height="20" Width="20"/>
        </StackPanel>

        <!--设置第三行-->
        <Grid ShowGridLines="True" Grid.Row="2">

            <!--对界面进行分列操作-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!--对第一列操作-->
            <StackPanel Grid.Column="0">
                <Button Content="1" Width="40" Height="20"/>
                <Button Content="2" Width="40" Height="20"/>
                <Button Content="3" Width="40" Height="20"/>
                <Button Content="4" Width="40" Height="20"/>
            </StackPanel>

            <!--对第二列操作-->
            <TextBox Grid.Column="1" Grid.Row="0" TextWrapping="Wrap"/>
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button  Content="1" Width="50" Height="20"/>
            <Button  Content="2" Width="50" Height="20"/>
            <Button  Content="3" Width="50" Height="20"/>
            <Button  Content="4" Width="50" Height="20"/>
            <Button  Content="5" Width="50" Height="20"/>
            <Button  Content="6" Width="50" Height="20"/>
            <Button  Content="7" Width="50" Height="20"/>
            <Button  Content="8" Width="50" Height="20"/>
            <Button  Content="9" Width="50" Height="20"/>
            <Button  Content="10" Width="50" Height="20"/>
            <Button  Content="11" Width="50" Height="20"/>
            <Button  Content="12" Width="50" Height="20"/>
            <Button  Content="13" Width="50" Height="20"/>
            <Button  Content="14" Width="50" Height="20"/>
            <Button  Content="15" Width="50" Height="20"/>
            <Button  Content="16" Width="50" Height="20"/>
        </StackPanel>
    </Grid>
</Window>
